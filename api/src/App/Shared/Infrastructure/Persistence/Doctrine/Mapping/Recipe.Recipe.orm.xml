<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Shared\Domain\Entity\Recipe\Recipe" table="recipes">
        <id name="id" type="uuid" column="id">
            <custom-id-generator class="App\Shared\Infrastructure\Persistence\Doctrine\Generator\UuidGenerator"/>
        </id>
        <one-to-one field="product" target-entity="App\Shared\Domain\Entity\Product\Product" orphan-removal="true" fetch="EXTRA_LAZY">
            <join-column name="product_id" referenced-column-name="id" unique="true"/>
        </one-to-one>
        <one-to-many field="items" target-entity="App\Shared\Domain\Entity\Recipe\Item" mapped-by="recipe"/>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
    </entity>
</doctrine-mapping>
