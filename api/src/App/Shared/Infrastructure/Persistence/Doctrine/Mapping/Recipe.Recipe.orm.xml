<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Shared\Domain\Entity\Recipe\Recipe" table="recipes">
        <id name="id" type="string" column="id" length="15"/>
        <field name="name" column="name" type="string" unique="true"/>
        <one-to-one field="unit" target-entity="App\Shared\Domain\Entity\Unit\Unit">
            <join-column nullable="false"/>
        </one-to-one>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
    </entity>
</doctrine-mapping>
