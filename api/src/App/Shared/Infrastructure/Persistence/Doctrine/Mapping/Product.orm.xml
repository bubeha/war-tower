<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Shared\Domain\Entity\Product" table="products">
        <id name="id" type="uuid" column="id">
            <custom-id-generator class="App\Shared\Infrastructure\Persistence\Doctrine\Generator\UuidGenerator"/>
        </id>
        <many-to-one field="detail" target-entity="App\Shared\Domain\Entity\Product\Detail">
            <join-column nullable="false"/>
        </many-to-one>
        <many-to-one field="category" target-entity="App\Shared\Domain\Entity\Product\Category">
            <join-column nullable="false"/>
        </many-to-one>

        <unique-constraints>
            <unique-constraint name="products_categories_detail_id_category_id_key" columns="detail_id,category_id"/>
        </unique-constraints>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
    </entity>
</doctrine-mapping>
