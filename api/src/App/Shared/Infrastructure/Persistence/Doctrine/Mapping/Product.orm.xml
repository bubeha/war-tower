<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Shared\Domain\Entity\Product" table="products">
        <id name="id" type="uuid" column="id">
            <custom-id-generator class="App\Shared\Infrastructure\Persistence\Doctrine\Generator\UuidGenerator"/>
        </id>
        <many-to-one field="type" target-entity="App\Shared\Domain\Entity\ProductType" inversed-by="products">
            <cascade>
                <cascade-all/>
            </cascade>
        </many-to-one>
        <field name="name" column="name" type="string" />
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
        <unique-constraints>
            <unique-constraint columns="type_id,name" name="products_type_id_name_key"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
